{
  "build": {
    "beforeDevCommand": "bash ./reader/build.sh && yarn workspace frontend dev",
    "beforeBuildCommand": "bash ./reader/build.sh && yarn workspace frontend build",
    "devPath": "http://localhost:1420",
    "distDir": "../frontend/dist"
  },
  "package": {
    "productName": "erasmus",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true,
        "sidecar": true,
        "scope": [
          { "name": "../bin/reader", "sidecar": true }
        ]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "be.treecompany.erasmus",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "externalBin": [
        "../bin/reader"
      ],
      "resources": [
        "../reader/dist/**/*"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "erasmus",
        "width": 800,
        "height": 600
      }
    ]
  }
}
